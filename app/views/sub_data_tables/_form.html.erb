<% if @sub_data_table.errors.any? %>

    <div class="alert alert-error alert-block"> <a class="close" data-dismiss="alert" href="#">×</a>
      <h4 class="alert-heading">Error!</h4>
      Hubo un problema al guardar el set de datos, completaste todos los datos? </div>
<%end%>



<%= form_for(@sub_data_table, :html => {:class => "form-horizontal"}) do |f|  %>
    <div class="control-group">
      <label class="control-label">Duración de la lluvia:</label>
      <div class="controls">
        <%= f.number_field :time_in_minutes, :class =>"span20", :hint=> "en minutos..." %>
      </div>
    </div>
    <%= f.hidden_field :data_table_id %>

    <div class="form-actions">
      <%= f.submit 'Crear set de datos', :class => 'btn btn-success' %>
    </div>
<% end%>